<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css">
</head>
<body>  
<div class="container">
<div class="row mt-3 ">
    <div class="col-md-6 m-auto">
        <h1 class="text-center">Todo App</h1>
        <form action="/todoapp" method="post" class="">
            <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Write a todo">
            </div>
            <button type="submit" class="btn btn-danger btn-block">Add</button>
        </form>
        
     <ul class="list-group mt-2">
     <% todos.forEach(function(list) { %>
        <form action="/todoapp/<%= list._id %>/done" method="POST">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class=""><%= list.description %></div> 
                    <button class="btn btn-success" type="submit">
                       Done
                    </button>
                </li>
           </form>
        <% }) %>
    </ul>
    </div>
    <div class="col-md-6">
          <div class="mt-3">
                    <h3 class="text-center">Done todos</h3>
                    <table class="table table-hover">
                           
                            <tbody class="text-center">
                                    <thead  class="table-dark"">
                                      <th>Todo</th>
                                      <th>Information</th>
                                      <th>Delete</th>
                                      <thead>
                               
                    <% donetodos.forEach(function(list) { %>
                        <form action="/todoapp/<%= list._id %>/done" method="POST">
                             <tr>  
                            <td><%= list.description %></td>
                            <td><button class="btn btn-success" type="submit">
                                    NotDone
                                 </button></td>
                                
                            <td><a href="/todoapp/<%= list._id %>/delete"><i class="fa fa-trash"></i></a></td>
                               
                                </tr>
                               
                           </form>
                        <% }) %>
                    </tbody>
                </table> 
    </div>
</div>
    </div>
</body>
</html>